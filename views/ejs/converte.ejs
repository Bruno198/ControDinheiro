            <form action="/salvaConversaos" method="post">

              <div class="form-group row">
                <label for="InputValorLancamento" class="col-sm-1 col-form-label">Valor</label>
                <div class="col-sm-10">
                  <input type="number" class="form-control"step="0.01" id="valor_a_converter_do_input" name="valor_a_converter_do_input" placeholder="Informe o Valor para ser convertido">
                </div>
              </div>
    
              <div class="form-group row">
                <label for="InputValorLancamento" class="col-sm-1 col-form-label">Moeda</label>
                <div class="col-sm-10">
                  <input type="number" class="form-control"step="0.01" id="moeda_para_conversao_do_input" name="moeda_para_conversao_do_input" placeholder="Informe quanto esta a moda pa o que voçe quer converter">
                </div>
              </div>
    
              <button type="button" class="btn btn-success" data-dismiss="modal">Converter</button>
    
            </form>
           

    
            <% if (listconvert.length  > 0) {%>
              <h5>Conversãos Realizadas</h5>
            <table class="table table-striped table-dark">
              <thead>
                <tr>
                  <th scope="col">Valor Original</th>
                  <th scope="col">Valor Convertido</th>
                  <th scope="col">Data dá Conversão</th>
                 
                </tr>
              </thead>
              <% listconvert.forEach( element => {%>
                <tr>
                  <td><%= " R$ " + element.valor_original %> </td>
                  <td><%= " US$ " + element.valor_convertido %> </td>
                  <td><%= element.data_da_convercao%> </td>
              </tr>
              <% });%>   
            </table>
            <% }%>
           
            
            
    </div>
    </div>
   
</div>
  
<div class="modal fade" id="modal_converter" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Realize Converçãos</h5><br>
        <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/salvaconvercao" method="post">

          <div class="form-group row">
            <label for="InputValorLancamento" class="col-sm-1 col-form-label">Valor</label>
            <div class="col-sm-10">
              <input type="number" class="form-control"step="0.01" id="valor_a_converter_do_input" name="valor_a_converter_do_input" placeholder="Informe o Valor para ser convertido">
            </div>
          </div>

          <div class="form-group row">
            <label for="InputValorLancamento" class="col-sm-1 col-form-label">Moeda</label>
            <div class="col-sm-10">
              <input type="number" class="form-control"step="0.01" id="moeda_para_conversao_do_input" name="moeda_para_conversao_do_input" placeholder="Informe quanto esta a moda pa o que voçe quer converter">
            </div>
          </div>

          <button type="button" class="btn btn-success" data-dismiss="modal">Converter</button>

        </form>

      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-primary" >Concluido</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
      </div>
    </div>
  </div>
</div>
